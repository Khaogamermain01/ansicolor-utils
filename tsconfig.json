{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
    },
    "exclude": [
        "node_modules",
        "__test__",
        "dist"
    ]
}